!!! 5
%html
  %head
    %title App Agencies
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      %header
        .inner
          %h1.logo
            = link_to "App Agencies", root_path
          %nav
            = render "shared/navigation"

      #main.inner{:role => "main"}
        -if user_signed_in?
          -unless current_user.company
            "Nog geen company!"
        = yield
      %footer.inner
        %nav#subnav
          %ul
            %li= link_to "About", "#"
            %li= link_to "Blog", "#"
            %li= link_to "Contact", "#"
            %li= link_to "Advertise", "#"
            %li= link_to "Testimonials", "#"
            %li= link_to "Newsletter", "#"

        %span#copyright Â© 2012 AppAgencies.com

        %nav#legal
          %ul
            %li= link_to "Terms", legal_terms_path
            %li= link_to "Privacy", legal_privacy_path

        %nav#social
          %span Join us on
          %ul
            %li.twitter
              .icon
              = link_to "Twitter", "http://twitter.com/appagencies", :target => "_blank"
            %li.fb
              .icon
              = link_to "Facebook", "http://www.facebook.com/AppAgencies", :target => "_blank"
