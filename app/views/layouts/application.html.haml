!!! 5
%html
  %head
    %title= content_for?(:title) ? content_for(:title) + " - AppAgencies" : "AppAgencies"
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}
    = favicon_link_tag

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      = render "shared/flashmsg"

      %header#header
        .inner
          %h1.logo
            = link_to "App Agencies", root_path
          %nav
            = render "shared/navigation"

      #main{:role => "main"}
        = yield
      %footer.inner
        = render "shared/footer"

    = render "shared/analytics"