!!! 5
%html
  %head
    %title App Agencies
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width"}
    = favicon_link_tag

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      - if flash[:notice]
        %p#notice= flash[:notice]
      - elsif flash[:alert]
        %p#alert= flash[:alert]

      %header
        .inner
          %h1.logo
            = link_to "App Agencies", root_path
          %nav
            = render "shared/navigation"

      #main{:role => "main"}
        = yield
      %footer.inner
        = render "shared/footer"