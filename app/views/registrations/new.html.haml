#signup.auth.inner
  %hgroup
    %h1 Increase your <em class="accentuate">online visibility.</em><br /> Start <em class="accentuate">getting work!</em>
    %h2 It's free and takes only a couple of minutes.

  #signup-box.box
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!

      %fieldset
        = f.label :email
        = f.email_field :email, placeholder: "your@email.com"

      %fieldset
        = f.label :password, "New Password"
        = f.password_field :password

      %fieldset.actions
        = f.submit "Create Your Listing"