.edit-listing.inner
  = render "shared/edit_nav"

  .company-apps-list
    .left-column
      .apps-nav
        %ul
          - @apps.reverse_each do |app|
            %li
              %a{href: "##{app.id}"}
                %figure.app-icon
                  = cl_image_tag app.icon_url if app.icon_url.present?
                  .mask
                .app-name= app.name
          - if current_user.is_pro? && @apps.count < 4
            %li.new
              %a{href: "#newapp"}
                %figure.app-icon
                  = image_tag "add-icon.png"
                .app-name New App
          - elsif @apps.count < 1
            %li.new
              %a{href: "#newapp"}
                %figure.app-icon
                  = image_tag "add-icon.png"
                .app-name New App
      - if !current_user.is_pro? && @apps.count > 0
        .skip= link_to "Want more apps? Upgrade now!", new_subscription_path


    .app-show.new#newapp
      = nested_form_for [@app.company, @app] do |f|
        = render 'form', :f => f

    - @apps.each do |app|
      .app-show.edit{id: app.id}
        = nested_form_for [app.company, app], :remote => true do |f|
          = render 'form', :f => f
        .app-delete= link_to "Delete this app", [app.company, app], :data => { :confirm => "Are you sure?" }, :method => :delete