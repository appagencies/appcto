%ul
  - if user_signed_in?
    %li= link_to "Upgrade!", "#"
    -if !current_user.company
      %li= link_to "You haven't added your company yet. List it now!", after_register_path(:add_company), :class => "getlisted notice"
    -else
      %li= link_to "View Listing", current_user.company
      %li= link_to "Edit Listing", edit_company_path(current_user.company)
    %li= link_to 'Settings', settings_path
    %li.logout= link_to 'Logout', logout_path, title: 'Logout'
  - else
    %li= link_to 'About', about_path
    %li= link_to 'Login', login_path
    %li= link_to 'Developer? Get Listed Now!', getlisted_path, :class => "getlisted"