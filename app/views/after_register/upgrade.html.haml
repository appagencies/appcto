- title "Choose to upgrade"

#signup-steps
  .inner
    %ol
      %li.step.previous
        %span.bullet
          1
        %span.label
          Create Account
      %li.step.previous
        = link_to wizard_path(:add_company) do
          %span.bullet
            2
          %span.label
            Company Details
      %li.step.previous
        %span.bullet
          3
        %span.label
          Apps Details
      %li.step.current
        %span.bullet
          4
        %span.label
          Publish

#plans.inner
  .instructions
    Choose to upgrade
  .plan
    %h1 Free
    .company.card.normal
      .company-content-wrapper
        %h1.company-name= link_to @company.name, "#"
        .company-location= @company.location.name
        .company-budget= budget_to_shortstring(@company.budget)
        .company-apps
          %ul.app-icons
            - @company.apps.limit(1).each do |app|
              %li
                = link_to "#" do
                  %figure.app-icon
                    = image_tag app.icon_url if app.icon_url.present?
                    .mask
          .apps-content
            - @company.apps.limit(1).each do |app|
              .app
                .app-name= app.name
                .app-description= simple_format h app.description
    .select-plan
      = link_to "Select Free", next_wizard_path

  .plan
    %h1 Pro <span>($99/m)</span>
    .company.card.large
      .company-content-wrapper
        %h1.company-name= link_to @company.name, "#"
        .company-location= @company.location.name
        .company-budget= budget_to_shortstring(@company.budget)
        .company-apps
          %ul.app-icons
            - @company.apps.cover.each do |app|
              %li
                = link_to "##{app.id}", "data-toggle" => "tab" do
                  %figure.app-icon
                    = image_tag app.icon_url if app.icon_url.present?
                    .mask

          .apps-content
            - @company.apps.cover.each do |app|
              .app{id: "#{app.id}"}
                .app-name= app.name
                .app-description= simple_format h app.description
                .app-screenshots
                  %a.nav.prev
                  %a.nav.next
                  .app-screenshots-inner
                    - app.screenshots.each do |s|
                      = image_tag s.screenshot_url
    .select-plan
      = link_to "Select Pro", new_subscription_path